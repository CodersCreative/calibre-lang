const calculate_pi = fn (n_terms : float) -> float => {
	const terms : float = n_terms * 2f + 1f;
	let mut pi : float = 0f;
	let mut denominator = 1f;
	let mut operation = 1f;
	
	for denominator < terms => {
		pi += operation * (4f / denominator);
		denominator += 2f;
		operation *= -1f;
	};
	
	return pi;
};

const main = fn => {
	let n = 1000000f;
	let result = calculate_pi(n);
	print(result);
};

bench pi => main();